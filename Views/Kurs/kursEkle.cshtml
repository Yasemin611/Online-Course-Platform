@using WebApplication2.Models;
@model List<Kurs>
@{
    ViewBag.Title = "kursEkle";
}

<h2>kursEkle</h2>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    OPERATIONS OF ADDING COURSE
                </div>
                <div class="block-controls">
                    <a href="/Kurs/Index"></a>
                    <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Kurs/kursEkle" method="post" role="form">
                        @*<div class="form-group">
                                <label for="exampleInputEmail1">Course ID</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter Course ID" name="kursID">
                            </div>*@
                        <div class="form-group">
                            <label for="exampleInputEmail1">Course Name</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter Course Name" name="kursAdi">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Price</label>
                            <input type="number" class="form-control" id="exampleInputPassword1" placeholder="Enter Price" name="fiyat">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Instructor</label>
                            <select class="form-control" name="egitmenID">
                                @foreach (Egitmen item in ViewBag.egitmen)
                                {
                                    <option value="@item.egitmenID">@item.egitmenAdi @item.egitmenSoyadi</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Programme</label>
                            <select class="form-control" name="programID">
                                @foreach (Kurs_Programi item in ViewBag.program)
                                {
                                    <option value="@item.programID">@item.programAdi</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Course</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>