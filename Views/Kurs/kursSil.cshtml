@using WebApplication2.Models
@model Kurs
@{
    ViewBag.Title = "Kurs Sil";
}

<h2>KursSil</h2>
<div class="row">
    <div class="col-md-12">
        <div class="block-heading">
            <div class="main-txt h2"> OPERATIONS OF DELETING COURSE </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                <form action="/Kurs/kursSil" method="post">
                    <input type="hidden" name="kursID" value="@Model.kursID" />
                    <label> Delete course named @Model.kursAdi ?</label>
                    <input class="btn-danger rounded" type="submit" value="Yes" />
                </form>
            </div>
        </div>
    </div>
</div>
