@using WebApplication2.Models;
@model List<Egitmenlere_Gore_Kurslar>
@{
    ViewBag.Title = "Courses According to Instructors";
}
<div class="jumbotron">
</div>
<h2>Courses According to Instructors</h2>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="sparkline12-list mg-b-30">
        <div class="sparkline12-hd">
            <div class="main-sparkline12-hd">
                <h1>Hover Table</h1>
            </div>
        </div>
        <div class="sparkline12-graph">
            <div class="static-table-list">
                <table class="table hover-table">
                    <thead>
                        <tr>
                            <th>Course ID</th>
                            <th>Course Name</th>
                            <th>Instructor ID</th>
                            <th>Instructor Name</th>
                            <th>Instructor Surname</th>
                            @*<th>Delete</th>
                            <th>Update</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.kursID</td>
                                <td>@item.kursAdi</td>
                                <td>@item.egitmenID</td>
                                <td>@item.egitmenAdi</td>
                                <td>@item.egitmenSoyadi</td>
                                @*<td>Delete</td>
                                <td>Update</td>*@

                                @*<td>
            <span class="label label-success">Complete</span>
        </td>*@
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>