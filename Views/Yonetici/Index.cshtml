@using WebApplication2.Models;
@model List<Kurs_Programi_Yoneticisi>
@{
    ViewBag.Title = "Admin Page";
}
<div class="jumbotron">

</div>
<h2>Admin Page</h2>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="sparkline12-list mg-b-30">
        <div class="sparkline12-hd">
            <div class="main-sparkline12-hd">
                <h1>Hover Table</h1>
            </div>
        </div>
        <div class="sparkline12-graph">
            <div class="static-table-list">
                <table class="table hover-table">
                    <thead>
                        <tr>
                            <th>Admin ID</th>
                            <th>Admin Name</th>
                            <th>Admin Surname</th>
                            <th>Admin Email Address</th>
                            <th>Admin Telephone Number</th>
                            <th>Admin Password</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.yoneticiID</td>
                                <td>@item.yoneticiAdi</td>
                                <td>@item.yoneticiSoyadi</td>
                                <td>@item.yEmail</td>
                                <td>@item.yTelNo</td>
                                <td>@item.yPassword</td>
                                <td><a href="/Kurs_Programi_Yoneticisi/yoneticiSil/@item.yoneticiID" class="btn btn-danger"> Delete </a></td>
                                <td><a href="/Kurs_Programi_Yoneticisi/yoneticiGüncelle/@item.yoneticiID" class="btn btn-danger"> Update </a></td>

                                @*<td>
            <span class="label label-success">Complete</span>
        </td>*@
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
